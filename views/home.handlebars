<aside class="comments">
        <div class="cima">
            <form class="form-search" action="/comments/search" method="GET">
                <input type="search" id="search" name="search" placeholder="Buscar o Comentário">
                <input type="submit" class="btn-search" value="Buscar">
            </form>
        </div>
    </aside>

    <div class="container-comments">
    <h2>Comentários</h2>

    {{#each comments}}
        <div class="comment">
            <p>{{User.name}}</p>
            <p><strong>{{title}}</strong></p>
            <p>{{comment}}</p>
            <p>{{formatDate date}}</p>
        </div>
    {{/each}}
</div>

<div class="carousel-fade">
  <div class="fade-slide"><img src="/img/img1.jpg" alt="Imagem 1"></div>
  <div class="fade-slide"><img src="/img/img2.jpg" alt="Imagem 2"></div>
  <div class="fade-slide"><img src="/img/img3.jpg" alt="Imagem 3"></div>
  <div class="fade-slide"><img src="/img/img4.jpg" alt="Imagem 4"></div>
  <div class="fade-slide"><img src="/img/img5.jpg" alt="Imagem 5"></div>
  <div class="fade-slide"><img src="/img/img6.jpg" alt="Imagem 6"></div>
</div>