<div class="comments-container">
    <h1>Criar Comments</h1>
    <form action="/comments/create" method="POST" class="form-create-comment">
        <div class="form-group">
            <label for="title">Título</label>
            <input type="text" id="title" name="title" placeholder="Título" required>
        </div>
        <div class="form-group">
            <label for="comment">Conteúdo</label>
            <textarea id="comment" name="comment" placeholder="Comentar" required></textarea>
        </div>
        <div class="form-group">
            <label for="id">Autor</label>
            <select id="select-author" name="id"  required>
                    <option value="" disabled selected>Selecione um autor</option>
                {{#each users}}
                    <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <input type="submit" value="Criar" class="btn-create-comment">
    </form>

</div>