<div class="comments-container">
    <h1>Criar Usuários</h1>
    <form action="/users/create" method="POST" class="form-create-comment">
        <div class="centro">
            <div class="left">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" id="nome" name="name" placeholder="Nome" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                     <input type="email" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="age">Idade</label>
                     <input type="number" id="age" name="age" max="100" min="0"  required>
                </div>
            </div>
            <div class="right">
                <div class="form-group">
                    <label for="country">País</label>
                     <input type="text" id="country" name="country" placeholder="País" required>
                </div>
                 <div class="form-group">
                    <label for="city">Província</label>
                     <input type="text" id="city" name="city" placeholder="Província" required>
                </div>
                <div class="form-group">
                    <label for="street">Rua</label>
                     <input type="text" id="street" name="street" placeholder="Rua" required>
                </div>
            </div>
        </div>
        
        <input type="submit" value="Criar" class="btn-create-comment">
    </form>

</div>